    <script>
        // Elementos da c칙mera
        const video = document.getElementById('video');
        const canvas = document.getElementById('photoCanvas');
        const capturedImage = document.getElementById('capturedImage');
        const startCameraBtn = document.getElementById('startCamera');
        const captureBtn = document.getElementById('captureBtn');
        const analyzeBtn = document.getElementById('analyzeBtn');
        const resetBtn = document.getElementById('resetBtn');
        const cameraPlaceholder = document.getElementById('cameraPlaceholder');
        const capturedImageContainer = document.getElementById('capturedImageContainer');
        const analysisPlaceholder = document.getElementById('analysisPlaceholder');
        const resultsContent = document.getElementById('resultsContent');
        const analysisLoading = document.getElementById('analysisLoading');

        // Elementos de resultados
        const totalDrops = document.getElementById('totalDrops');
        const densityResult = document.getElementById('densityResult');
        const coverageResult = document.getElementById('coverageResult');
        const coverageProgress = document.getElementById('coverageProgress');
        const avgSizeResult = document.getElementById('avgSizeResult');
        const uniformityResult = document.getElementById('uniformityResult');
        const qualityResult = document.getElementById('qualityResult');
        const recommendationText = document.getElementById('recommendationText');

        let stream = null;

        // Iniciar c칙mera
        startCameraBtn.addEventListener('click', async () => {
            try {
                stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { 
                        facingMode: 'environment',
                        width: { ideal: 1280 },
                        height: { ideal: 720 }
                    } 
                });
                
                video.srcObject = stream;
                cameraPlaceholder.classList.add('hidden');
                video.classList.remove('hidden');
                captureBtn.disabled = false;
                startCameraBtn.disabled = true;
                startCameraBtn.textContent = 'C칙mera Ativa';
                
            } catch (err) {
                console.error('Erro ao acessar a c칙mera:', err);
                alert('N칚o foi poss칤vel acessar a c칙mera. Verifique as permiss칫es.');
            }
        });

        // Capturar foto
        captureBtn.addEventListener('click', () => {
            const context = canvas.getContext('2d');
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            context.drawImage(video, 0, 0, canvas.width, canvas.height);
            
            // Converter canvas para imagem
            capturedImage.src = canvas.toDataURL('image/png');
            capturedImageContainer.classList.remove('hidden');
            analyzeBtn.disabled = false;
            
            // Parar a c칙mera ap칩s captura para economizar bateria
            if (stream) {
                stream.getTracks().forEach(track => track.stop());
            }
        });

        // Analisar imagem
        analyzeBtn.addEventListener('click', () => {
            analysisPlaceholder.classList.add('hidden');
            analysisLoading.classList.remove('hidden');
            resultsContent.classList.add('hidden');
            
            // Simular processamento (em um sistema real, isso seria processamento de imagem real)
            setTimeout(() => {
                analyzeDropletsFromImage();
            }, 2000);
        });

        // Nova an치lise
        resetBtn.addEventListener('click', () => {
            // Limpar resultados
            capturedImageContainer.classList.add('hidden');
            analysisPlaceholder.classList.remove('hidden');
            resultsContent.classList.add('hidden');
            analysisLoading.classList.add('hidden');
            
            // Resetar controles
            analyzeBtn.disabled = true;
            captureBtn.disabled = true;
            startCameraBtn.disabled = false;
            startCameraBtn.textContent = 'Iniciar C칙mera';
            
            // Limpar imagem
            capturedImage.src = '';
            
            // Parar c칙mera se estiver ativa
            if (stream) {
                stream.getTracks().forEach(track => track.stop());
                stream = null;
            }
        });

        // Fun칞칚o de an치lise de gotas (simulada)
        function analyzeDropletsFromImage() {
            // Em um sistema real, aqui seria processamento real de imagem
            // Por enquanto, vamos gerar dados simulados baseados em "an치lise de imagem"
            
            // Simular detec칞칚o de gotas (valores aleat칩rios mas realistas)
            const simulatedDrops = Math.floor(Math.random() * 200) + 50; // 50-250 gotas
            const simulatedDensity = Math.floor(simulatedDrops / 2.5); // gotas/cm
            const simulatedCoverage = Math.floor(Math.random() * 40) + 30; // 30-70%
            const simulatedAvgSize = Math.floor(Math.random() * 300) + 100; // 100-400풮m
            
            // Calcular uniformidade baseada na cobertura
            let uniformity = 'Boa';
            let quality = '칍tima';
            let recommendation = 'A pulveriza칞칚o est치 dentro dos par칙metros ideais.';
            
            if (simulatedCoverage < 40) {
                uniformity = 'Ruim';
                quality = 'Precisa Melhorar';
                recommendation = 'Cobertura insuficiente. Ajuste o volume de calda ou verifique os bicos.';
            } else if (simulatedCoverage > 65) {
                uniformity = 'Regular';
                quality = 'Boa';
                recommendation = 'Cobertura adequada, mas pode ser otimizada.';
            }
            
            if (simulatedAvgSize < 150) {
                quality = 'Risco de Deriva';
                recommendation = 'Gotas muito finas. Risco de deriva elevado. Use bicos que produzam gotas maiores.';
            } else if (simulatedAvgSize > 350) {
                quality = 'M치 Distribui칞칚o';
                recommendation = 'Gotas muito grossas. Pode haver m치 distribui칞칚o. Use bicos que produzam gotas menores.';
            }
            
            // Atualizar interface
            totalDrops.textContent = simulatedDrops;
            densityResult.textContent = simulatedDensity;
            coverageResult.textContent = simulatedCoverage + '%';
            coverageProgress.style.width = simulatedCoverage + '%';
            avgSizeResult.textContent = simulatedAvgSize + ' 풮m';
            uniformityResult.textContent = uniformity;
            qualityResult.textContent = quality;
            recommendationText.textContent = recommendation;
            
            // Mostrar resultados
            analysisLoading.classList.add('hidden');
            resultsContent.classList.remove('hidden');
            
            // Em um sistema real, aqui ter칤amos:
            // 1. Processamento real da imagem com Canvas API
            // 2. Detec칞칚o de c칤rculos/bordas (gotas)
            // 3. C치lculo de 치reas e distribui칞칚o
            // 4. Algoritmos de vis칚o computacional
        }

        // Dica para melhor qualidade de an치lise
        console.log("Dica: Para melhor an치lise, fotografe o papel hidrossens칤vel em:");
        console.log("- Boa ilumina칞칚o natural");
        console.log("- Fundo contrastante");
        console.log("- Preencha todo o campo da c칙mera com o papel");
        console.log("- Mantenha a c칙mera paralela ao papel");
    </script>
